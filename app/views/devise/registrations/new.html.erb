<% content_for(:title) do%>
	<%= 'Sign Up: Sky Clarity Media Management' %>
<% end %>

<div class='title-episode-bold'><b>Sign Up</b></div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, class: 'title-episode-bold' %>
    <em>(Used for login)</em>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control field-normal' %>
  </div>

  <p>
  <div class="field">
    <%= f.label :name, class: 'title-episode-bold'%>
    <em>(Used for display)</em>
    <%= f.text_field :name, class: 'form-control field-normal' %>
  </div>
  </p>
  <p>
  <div class="field">
    <%= f.label :role, class: 'title-episode-bold' %>
    <%= f.text_field :role, class: 'form-control field-normal' %>
  </div>
  </p>

  <div class="field">
    <%= f.label :password, class: 'title-episode-bold' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control field-normal' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: 'title-episode-bold' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control field-normal' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-default' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
