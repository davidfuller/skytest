<% content_for(:title) do%>
	<%= 'Edit User: Sky Clarity Media Management' %>
  <%= 'Editing Clip Type: ' + resource_name.name + ': Sky Clarity Media Management' %>
<% end %>

<div class='title-episode-bold'><b>Edit <%= resource_name.to_s.humanize %></b></div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, class: 'title-episode-bold' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control field-normal' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, class: 'title-episode-bold' %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control field-normal' %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: 'title-episode-bold' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control field-normal' %>
  </div>

  <div class="field">
    <%= f.label :current_password, class: 'title-episode-bold'%> <i>(we need the current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control field-normal' %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: 'btn btn-default' %>
  </div>
<% end %>

<%= link_to "Back", :back %>
