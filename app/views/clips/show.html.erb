<% content_for(:title) do%>
	  Clip: Sky Clarity Media Management
<% end %>

<h3 class="title-episode-bold">Clip</h3>
<div class='title-normal-condensed'>
  <%= link_to 'Edit this Clip', edit_clip_path(@clip) %> |
  <%= link_to 'Clip List', clips_path %>
</div>

