<%= form_for(@clip_type) do |f| %>
  <% if @clip_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@clip_type.errors.count, "error") %> prohibited this clip_type from being saved:</h2>

      <ul>
      <% @clip_type.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, class: 'title-episode-bold'%><br>
    <%= f.text_field :name, :autofocus => true, :class => "form-control field-normal" %>
  </div>
  <div class="field">
    <%= f.label :description, class: 'title-episode-bold'%><br>
    <%= f.text_area :description, class: 'form-control field-normal' %>
  </div>
  <div class="field">
    <%= f.label :default_duration, 'Default Duration (Seconds)', class: 'title-episode-bold'%><br>
    <%= f.number_field :default_duration, class: 'form-control spinner'%>
  </div>
  <div class="field">
    <%= f.label :default_has_audio, 'Default Has Audio', class: 'title-episode-bold'%><br>
    <%= f.check_box :default_has_audio, :class => 'field-check-box' %>
  </div>
  <div class="actions">
   <%= f.submit (f.object.new_record? ? "Create Clip Type" : "Update Clip Type"), :class => "btn btn-default" %>
  </div>
<% end %>
