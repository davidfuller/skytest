<% content_for(:title) do%>
	BSS Episodes: Sky Clarity Media Management
<% end %>

<h3 class="title-episode-bold">Episodes</h3>

<%= form_tag episodes_path, :method => 'get', :class => 'form-inline' do %>
    <span class="input-group-btn">
        <%= text_field_tag :search, params[:search], {:class => 'form-control field-title-search', :placeholder => "Search", :autofocus => true} %>
        <%= button_tag type: 'submit', :class => 'btn btn-default' do %>
            <i class='glyphicon glyphicon-search'></i>
        <% end %>
        <%= button_tag "Clear", type: :button, :class => 'btn btn-default', :onclick =>'document.getElementById("search").value=""' %>
    </span>
<% end %>
<br>
<%= my_paginate @episodes %>

<table class='table table-condensed'>
  <thead>
    <tr class='title-episode-bold'>
      <th>Title</th>
      <th>Episode Title</th>
      <th>Season</th>
      <th>Episode</th>
			<th>Year</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @episodes.each do |episode| %>
      <tr>
        <td><%= episode.title.title unless episode.title.nil? %></td>
				<td><%= episode.episode_title %></td>
        <td><%= episode.season %></td>
        <td><%= episode.episode %></td>
				<td><%= episode.year %></td>
        <td class='table-links'><%= link_to 'Show', episode %> <td><%= link_to 'Edit', edit_episode_path(episode) %> <td><%= link_to 'Destroy', episode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= my_paginate @episodes %>
<p>
  <%= link_to 'New Episode', new_episode_path %>
</p>
