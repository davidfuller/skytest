<%= form_for(@episode, :html => { class: 'form-group'}) do |f| %>
  <% if @episode.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@episode.errors.count, "error") %> prohibited this episode from being saved:</h2>

      <ul>
      <% @episode.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
	<%= f.hidden_field :source %>
	<%= f.hidden_field :season_choice %>
	
	<div class="field">
    <%= f.label :episode_title, class: 'title-episode-bold' %><br>
    <%= f.text_field :episode_title, :autofocus => true, :class => "form-control field-full" %>
  </div>
  
  <div class="field">
    <%= f.label :season, class: 'title-episode-bold' %><br>
    <%= f.text_field :season, :class => "form-control field-normal" %>
  </div>
  <div class="field">
    <%= f.label :episode, class: 'title-episode-bold' %><br>
    <%= f.text_field :episode, :class => "form-control field-normal" %>
  </div>
  <div class="field">
    <%= f.label :year, class: 'title-episode-bold' %><br>
    <%= f.text_field :year, :class => "form-control field-normal" %>
  </div>
  
  <% if @episode.source == 'title_show'%>
  	<%= f.hidden_field :title_id %>
  <% else %>
		<div class="field">
			<%= f.label :title_id %><br>
			<%= f.text_field :title_id %>
		</div>
	<% end %>
  
  <div class="actions">
    <%= f.submit nil, :class => "btn btn-default"%>
  </div>
<% end %>
