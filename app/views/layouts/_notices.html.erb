<% if flash[:notice] != nil %>
  <div class="alert alert-success alert-dismissible">
    <a href="#" class="close" data-dismuss="alert" aria-label="close">&times;</a>
    <% flash[:notice].split(". ").each do |fl| %>
      <%= fl %> <br />
    <% end %>
  </div> <!-- alert -->
<% end %> <!-- if flash[:notice] -->

<% if flash[:alert] != nil %>
  <div class="alert alert-danger alert-dismissible">
    <a href="#" class="close" data-dismuss="alert" aria-label="close">&times;</a>
    <%= flash[:alert] %>
  </div> <!-- alert -->
<% end %> <!-- if flash[:alert] -->