<% content_for(:title) do%>
	Titles: Sky Clarity Media Management
<% end %>

<div class="row">
    <div class="col-xs-1"></div>
    <div class="col-sm-8 title-episode-info">
        <h3 class="title-episode-bold">Titles</h3>

        <%= form_tag titles_path, :method => 'get' do %>
            <%= text_field_tag :search, params[:search], {:class => 'form-control', :placeholder => "Search"} %>
            
            <span class="input-group">
                <%= submit_tag "Search", :class => 'btn btn-default' %>
                <span class="input-group-addon">
                    <span class='glyphicon glyphicon-search'></span>
                </span>
            </span>
        <% end %>

        <br/>
        <%= link_to 'New Title', new_title_path %>
        <br/>

        <%= my_paginate @titles %>
        <table class="table">
            <thead>
                <tr>
                    <th class="title-episode-bold">Title</th>
                    <th colspan="3"></th>
                </tr>
            </thead>
            <tbody>
                <% @titles.each do |title| %>
                    <tr>
                        <td><b><%= link_to title.title, title %></b></td>
                        <td><%= link_to 'Show', title %></td>
                        <td><%= link_to 'Edit', edit_title_path(title) %></td>
                        <td><%= link_to 'Destroy', title, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
        <%= my_paginate @titles %>
    </div>
    <div class="col-xs-1"></div>
</div>



