<% content_for(:title) do%>
	Titles: Sky Clarity Media Management
<% end %>

<h1>Titles</h1>

<fieldset>
	<legend>Titles</legend>
	<% form_tag titles_path, :method => 'get' do %>
		<p>
			<%= text_field_tag :search, params[:search], :size => 45 %>
			<%= submit_tag "Search", :name => nil %>
		</p>
	<% end %>
</fieldset>

<br/>
<%= link_to 'New Title', new_title_path %>
<%= will_paginate @titles %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @titles.each do |title| %>
      <tr>
        <td><%= title.title %></td>
        <td><%= link_to 'Show', title %></td>
        <td><%= link_to 'Edit', edit_title_path(title) %></td>
        <td><%= link_to 'Destroy', title, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>
<%= will_paginate @titles %>


