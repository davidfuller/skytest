<% content_for(:title) do%>
	  Title: <%= @title.title %> Sky Clarity Media Management
<% end %>

<div>
	<p><b>Title</b>
	<%= @title.title %></p>

	<p>
	<% if @season_list.count > 2 %>
		<%= form_tag @title, method: 'get' do %>
			<label>Seasons</label> <%= select_tag :season_choice, options_for_select(@season_list, params[:season_choice]), :class => 'form-select-tag', onchange: 'this.form.submit()'%><br/>
		<% end %>
	<% end %>
	</p>

	<label><%= pluralize(@episode_list.count, 'Episode')%></label>

	<table class="table">
		<thead>
			<tr>
				<th class="col-sm-1">Episode title</th>
				<th class="col-sm-1">Season</th>
				<th class="col-sm-1">Episode</th>
				<th class="col-sm-1">Year</th>
				<th colspan="3" class="col-sm-3"></th>
			</tr>
		</thead>

		<tbody>
			<% @episode_list.each do |episode| %>
				<tr>
					<td><%= episode.episode_title %></td>
					<td><%= episode.season %></td>
					<td><%= episode.episode %></td>
					<td><%= episode.year %></td>
					<td><%= link_to 'Edit', edit_episode_path(episode, source: :title_show, season_choice: params[:season_choice]) %></td>
					<td><%= link_to 'Destroy', episode_path(episode, source: :title_show, season_choice: params[:season_choice]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<p>
			<%= link_to 'Add an Episode', action: :add_episode, id: @title, source: :title_show %>
	</p>

	<%= link_to 'Edit Title', edit_title_path(@title) %> |
	<%= link_to 'Back', titles_path %>
</div>