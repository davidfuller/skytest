<div class="panel-group">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title title-episode-bold">
        <a data-toggle="collapse" href="#device-types-add">Add Device Type</a>
      </h3>
      <% if @clip_type %>
        <% my_clip = @clip_type %>
        <% my_source = :clip_type %>
      <% elsif @clip %>
        <% my_clip = @clip %>
        <% my_source = :clip %>
      <% end %>
        
      <% if my_clip.device_add_show %>
        <div id="device-types-add" class="panel-collapse collapse in">
      <% else %>
        <div id="device-types-add" class="panel-collapse collapse">
      <% end %>
        <table class="table table-condensed">
          <tbody>
            <% @device_types.each do |device| %>
              <tr>
                <td><%= link_to device.name, add_device(my_source, my_clip, device, params) %></td>
                <td><%= link_to 'Add', add_device(my_source, my_clip, device, params) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
