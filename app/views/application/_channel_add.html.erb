<div class="panel-group">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title title-episode-bold">
        <a data-toggle="collapse" href="#channels-add">Add Channel (TX and Promo)</a>
      </h3>

      <% if @clip_type %>
        <% my_clip = @clip_type %>
        <% my_source = :clip_type %>
      <% elsif @clip %>
        <% my_clip = @clip %>
        <% my_source = :clip %>
      <% end %>

      <% if my_clip.channel_add_show %>
        <div id="channels-add" class="panel-collapse collapse in">
      <% else %>
        <div id="channels-add" class="panel-collapse collapse">
      <% end %>

        <%= render 'search', path: my_clip %>
        <%= form_tag my_clip, :method => 'get', :class => 'form-inline', :remote => true do %>
          <span class="input-group-btn">
              <%= text_field_tag :search, params[:search], {:class => 'form-control field-title-search', :placeholder => "Search", :autofocus => true} %>
              <%= button_tag type: 'submit', :class => 'btn btn-default', :name => nil do %>
                  <i class='glyphicon glyphicon-search'></i>
              <% end %>
              <%= button_tag "Clear", type: :button, :class => 'btn btn-default', :onclick =>'document.getElementById("search").value=""' %>
          </span>
        <% end %>
        <br>
        <div id = 'clip-type-channels'>
        
          <%= render 'channels'%>
        </div>
      </div>
    </div>
  </div>
</div>