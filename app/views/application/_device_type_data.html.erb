<div class="panel-group">
  <div class="panel panel-default">
    <div class="panel-heading">
      
      <% if @clip_type %>
        <% my_clip = @clip_type %>
        <% my_source = :clip_type %>
      <% elsif @clip %>
        <% my_clip = @clip %>
        <% my_source = :clip %>
      <% end %>
      
      <h3 class="panel-title title-episode-bold">
        <a data-toggle="collapse" href="#device-types"><%= pluralize(my_clip.device_types.count, 'Device Type') %></a>
      </h3>
      
    
      <% if my_clip.device_data_show %>
        <div id="device-types" class="panel-collapse collapse in">
      <% else %>
        <div id="device-types" class="panel-collapse collapse">
      <% end %>
        <table class="table table-condensed">
          <tbody>
            <% my_clip.device_types.each do |device| %>
              <tr>
                <td><%= device.name %></td>
                <td class='table-links'><%= link_to 'Remove', remove_device(my_source, my_clip, device, params) %> </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>