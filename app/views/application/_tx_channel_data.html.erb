<div class="panel-group">
  <div class="panel panel-default">
    <div class="panel-heading">

      <% if @clip_type %>
        <% my_clip = @clip_type %>
        <% my_source = :clip_type %>
      <% elsif @clip %>
        <% my_clip = @clip %>
        <% my_source = :clip %>
      <% end %>

      <h3 class="panel-title title-episode-bold">
        <a data-toggle="collapse" href="#tx-channels"><%= pluralize(my_clip.tx_channels.count, 'TX Channel') %></a>
      </h3>
      <% if my_clip.tx_channel_data_show %>
        <div id="tx-channels" class="panel-collapse collapse in">
      <% else %>
        <div id="tx-channels" class="panel-collapse collapse">
      <% end %>
        <table class="table table-condensed">
          <tbody>
            <% my_clip.tx_channels.each do |tx| %>
              <tr>
                <td><%= tx.channel.name %></td>
                <td class='table-links'><%= link_to 'Remove', remove_channel(my_source, :tx, my_clip, tx.channel, params) %> </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>