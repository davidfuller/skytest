/* Styles for main page */
/* Colour Glossary
	Light Blue #D7E4EC banner background and side text
	Dark Blue #00367C Side bar and some text
	Light Grey #D1D1D1 Alt table columns
	Light Red #EA7983 Used for error rows
*/

#banner { 
	background: #D7E4EC; 
	padding-top: 10px; 
	padding-bottom: 10px; 
	border-bottom: 2px solid; 
	font: 40px "Verdana", sans-serif; 
	color: #00367C; 
	text-align: center;
}

#banner img { 
	float: left;
}

#columns { 
	background: #00367C;
}

#main { 
	position: relative;
	font-family: "Verdana", sans-serif; 
	margin-left: 18em; 
	padding-top: 4ex; 
	padding-left: 2em; 
	background: white;
}

#main a {
	font-size: 10px;
	color: #00367C;
	text-decoration: none;
}

#main a:hover {
	color:  #D7E4EC;
	background: #00367C;
}

#side { 
	float: left; 
	padding-top: 1em; 
	padding-left: 1em; 
	padding-bottom: 100em; 
	width: 17em; 
	background: #00367C;
	color: #D7E4EC;
}

#side h3, h4 { 
	color:  #D7E4EC;
	font-size: medium;
	margin-bottom: 3px;
}
	
#side a { 
	color: #D7E4EC; 
	font-size: small;
	text-decoration: none;
}

#side a:hover { 
	color: white;
	background: #00367C;
	text-decoration: underline;
}

#store .missing {
	background: #FCA3A3;
}

#store .contained {
	background: #FFFDB7;
}



