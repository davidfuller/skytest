/*================================*/


#store .titled {
	background: #FEE1D2;
}

#store .titled_contained {
	background: #D7E4EC;
}

#store .heading {
	background: #CCC;
	font-weight: bold;
}

#store .error {
	color: white;
	background: red;
}

#store .not_loaded {
	background: orange;
}

#store .waiting {
	color: #900;
}

#store .processing {
	color: #906;
}

#store .ready {
	color: green;
}

#store ul {
	list-style-type: none;
	text-indent: 0px;
	padding: 1px;
	font-size: 10px;
	border: 1px solid #DDD;	
}

#store .countdown{
	color: #00367C;
}

#store .countdown td{
	padding-right: 1em;
	font-size: 14px;
	font-weight: bold;
	text-align: left;
	vertical-align: top;
}

#store .countdown a{
	font-size: 10px;
	font-weight: normal;
}

#store li {
	width: 300px;
}

#store h1, h2 { 
	color:  #00367C; 
	font-size: medium;
  	font-family: verdana, arial, helvetica, sans-serif;
}

#store h3 { 
	color:  #00367C; 
	font-size: 10px;
	line-height: 0px;
}

#store table {
	border-collapse: collapse;
}


#store td, th {
	padding-right: 1em;
	font-size: 10px;
	text-align: left;
	vertical-align: top;
}

#store td .day_heading {
	color: #00367C;
	font-weight: bold;
}

#store .comparison_date td {
	font-size: 12px;
}

#store .comparison_date th {
	font-size: 12px;
	color: #00367C;
	font-weight: bold;
}

#word {
	font-size: large;
	width: 100px;
}

#lang {
	width: 150px;
}

#link a {
	font-size: 10px;
	text-decoration: none;
}

#link a:hover{
	color: #00367C;
	background: #D7E4EC;
	text-decoration: underline;
}

#store fieldset {
	width: 600px;
}

#store fieldset legend{
	color:  #00367C; 
	font-size: medium;
	font-weight: bold;
}

.link_button a {
	font-size: 10px;
	text-decoration: none;
	color: #00367C;
}

.link_button a:hover{
	background: #D7E4EC;
	text-decoration: underline;
}

.info_text {
	font-size: 11px;
	color: #00367C;
}

#colour_key  {
	position: absolute;
	top: 0;
	right: 0;
	z-index: +2;
}

#colour_key li  {
	width: 400px;
}

#colour_key li a {
	font-weight: normal;
	position: relative;
	left: 30px;
}

.schedule_comparison_header {
